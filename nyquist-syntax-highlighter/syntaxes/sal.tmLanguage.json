{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nyquist",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [{ "include": "#comment" }, { "include": "#keywords" }, { "include": "#strings" }, {"include": "#parameter"}]
		  },
		"parameter": {
			"name": "comment.line.sal",
			"patterns": [
				{
					"name": "variable.parameter.sal",
					"match": "[a-zA-Z-]+:"
				}
			]
		},
		"user-variables": {
			"name": "variable.sal",
			"match": "\\b([a-zA-Z0-9_-]*)\\b"
		},
		"comment": {
			"begin": ";",
			"end": "\\n",
			"name": "comment.line.sal"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sal",
				"match": "\\b(if|while|for|return|then|set|define function|with|begin|end|finally|display|function)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.sal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sal",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.sal"
}