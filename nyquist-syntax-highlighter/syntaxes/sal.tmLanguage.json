{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nyquist",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{ "include": "#comment" }, 
				{ "include": "#keywords" }, 
				{ "include": "#strings" }, 
				{"include": "#function"}
			]
		  },
		"function": {
			"patterns": [
			  {
				"name": "keyword.modifier",
				"match": "\\b(public|private|static)\\b"
			  },
			  {
				"name": "entity.name.function",
				"match": "\\b[a-zA-Z_-][a-zA-Z0-9_-]*\\b(?=\\()"
			  },
			  {
				"name": "variable.parameter",
				"match": "\\b[a-zA-Z_-][a-zA-Z0-9_-]*(?=\\:)"
			  },
			  {
				"name": "punctuation.definition.parameters.begin",
				"match": "\\("
			  },
			  {
				"name": "punctuation.definition.parameters.end",
				"match": "\\)"
			  }
			]
		},
		"comment": {
			"begin": ";",
			"end": "\\n",
			"name": "comment.line.sal"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sal",
				"match": "\\b(if|while|for|return|then|set|define function|with|begin|end|finally|display|function)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.sal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sal",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.sal"
}