{
  "name": "nyquist-sal-extension",
  "displayName": "nyquist-sal-extension",
  "description": "vscode extension for SAL",
  "publisher": "MukundhBalajee",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.86.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mukundhbalajee/icm-final-project.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sal",
    "onCommand:code-symphone.plotGraph",
    "onCommand:sal-graph.commands.refresh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nyquist-sal-extension.helloWorld",
        "title": "Hello World VSCode",
        "category": "test"
      },
      {
        "command": "nyquist-sal-extension.launchTerminal",
        "title": "Launch Terminal",
        "category": "test"
      },
      {
        "command": "nyquist-sal-extension.openInBrowser",
        "title": "Open in Browser",
        "category": "test"
      },
      {
        "command": "nyquist-sal-extension.createPanel",
        "title": "Create Panel",
        "category": "test"
      },
      {
        "command": "nyquist-sal-extension.createTextable",
        "title": "Create Textable",
        "category": "test"
      },
      {
        "command": "nyquist-sal-extension.runFile",
        "title": "Run File",
        "icon": "$(debug-start)"
      },
      {
        "command": "nyquist-sal-extension.replay",
        "title": "Replay",
        "icon": "$(debug-reverse-continue)"
      },
      {
        "command": "nyquist-sal-extension.interactiveSal",
        "title": "Interactive Sal"
      },
      {
        "command": "nyquist-sal-extension.runSelection",
        "title": "Run Selection",
        "category": "shortcuts"
      },
      {
        "command": "nyquist-sal-extension.replay2",
        "title": "Replay2"
      },
      {
        "command": "nyquist-sal-extension.plotGraph",
        "title": "Open WebView panel to display latest graph",
        "category": "shortcuts"
      }
    ],
    "themes": [
      {
        "label": "Main color theme",
        "uiTheme": "vs-dark",
        "path": "./themes/colors.json"
      }
    ],
    "languages": [
      {
        "id": "sal",
        "aliases": [
          "Nyquist",
          "sal"
        ],
        "extensions": [
          ".sal"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./res/img/tabIcon.svg",
          "dark": "./res/img/tabIcon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "sal",
        "scopeName": "source.sal",
        "path": "./syntaxes/sal.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nyquistContainer",
          "title": "Nyquist",
          "icon": "./res/img/nqicon.svg"
        }
      ]
    },
    "views": {
      "nyquistContainer": [
        {
          "id": "nyquistView",
          "name": "<Display Name>"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == sal",
          "command": "nyquist-sal-extension.runFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == sal",
          "command": "nyquist-sal-extension.replay",
          "group": "navigation@2"
        },
        {
          "when": "resourceLangId == sal",
          "command": "nyquist-sal-extension.plotGraph",
          "group": "navigation@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "nyquist-sal-extension.runFile"
        },
        {
          "command": "nyquist-sal-extension.replay"
        }
      ],
      "view/item/context": [
        {
          "command": "nyquist-sal-extension.interactiveSal",
          "when": "view == nyquistView"
        }
      ]
    },
    "keybindings": [
      {
        "command": "nyquist-sal-extension.runSelection",
        "key": "ctrl+u",
        "mac": "cmd+u",
        "when": "editorTextFocus"
      },
      {
        "command": "nyquist-sal-extension.runFile",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.28",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chart.js": "^4.4.2"
  }
}
