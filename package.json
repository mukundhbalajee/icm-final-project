{
  "name": "code-symphony",
  "publisher": "icm",
  "displayName": "code-symphony",
  "description": "vscode extension for SAL",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sal",
    "onView:nyquistView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-symphony.helloWorld",
        "title": "Hello World VSCode",
        "category": "test"
      },
      {
        "command": "code-symphony.launchTerminal",
        "title": "Launch Terminal",
        "category": "test"
      },
      {
        "command": "code-symphony.openInBrowser",
        "title": "Open in Browser",
        "category": "test"
      },
      {
        "command": "code-symphony.createPanel",
        "title": "Create Panel",
        "category": "test"
      },
      {
        "command": "code-symphony.createTextable",
        "title": "Create Textable",
        "category": "test"
      },
      {
        "command": "code-symphony.runFile",
        "title": "Run File",
        "icon": "$(debug-start)"
      },
      {
        "command": "code-symphony.replay",
        "title": "Replay",
        "icon": "$(debug-reverse-continue)"
      },
      {
        "command": "code-symphony.runSelection",
        "title": "Run Selection",
        "category": "shortcuts"
      },
      {
        "command": "code-symphony.replay2",
        "title": "Replay2"
      },
      {
        "command": "nyquist.setSampleRate",
        "title": "Set Sample Rate"
      },
      {
        "command": "nyquist.setControlRate",
        "title": "Set Control Rate"
      },
      {
        "command": "nyquist.setNyquistDir",
        "title": "Set Nyquist Directory"
      }
    ],
    "themes": [
      {
        "label": "Main color theme",
        "uiTheme": "vs-dark",
        "path": "./themes/colors.json"
      }
    ],
    "languages": [
      {
        "id": "sal",
        "aliases": [
          "Nyquist",
          "sal"
        ],
        "extensions": [
          ".sal"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./res/img/tabIcon.svg",
          "dark": "./res/img/tabIcon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "sal",
        "scopeName": "source.sal",
        "path": "./syntaxes/sal.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nyquistContainer",
          "title": "Nyquist",
          "icon": "./res/img/nqicon.svg"
        }
      ]
    },
    "views": {
      "nyquistContainer": [
        {
          "id": "nyquistView",
          "name": "Settings"
        }
      ]
    },
    "configuration": {
      "title": "Nyquist Configuration",
      "properties": {
        "nyquist.sampleRate": {
          "type": "number",
          "default": 44100,
          "description": "Sample rate for Nyquist audio processing"
        },
        "nyquist.controlRate": {
          "type": "number",
          "default": 4410,
          "description": "Control rate for Nyquist audio processing"
        },
        "nyquist.nyquistDir": {
          "type": "string",
          "default": "",
          "description": "Directory for Nyquist files"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == sal",
          "command": "code-symphony.runFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == sal",
          "command": "code-symphony.replay",
          "group": "navigation@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "code-symphony.runFile"
        },
        {
          "command": "code-symphony.replay"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-symphony.runSelection",
        "key": "ctrl+u",
        "mac": "cmd+u",
        "when": "editorTextFocus"
      },
      {
        "command": "code-symphony.runFile",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.28",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}